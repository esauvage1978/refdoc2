{% extends 'base.html.twig' %}

{% import "macros/widgets.html.twig" as widgets %}

{% block title %}
	{{ app_name }}
	- Administration
{% endblock %}
{% block page_title %}
	{{ widgets.icon('admin') }}
	Administration
{% endblock %}

{% block page_content %}
	<div class="row mt-5">
		<div
			class="col-lg-4 ">
			{# ... box widget with defaults ... #}

			<div class="card">
				<div class="list-group list-group-flush">
					{% for entry in general_entries %}
						<a href="{{ path(entry.route)}}" target="_self" class="list-group-item list-group-item-action hvr-float-shadow">
							<div class="d-flex w-100 align-items-center">
								<div class="col-4  text-center">
									<i class="fa-3x {{entry.icon}}"></i>
								</div>
								<div class="">
									<h5 class="mb-1 ">
										<strong>{{ entry.name }}</strong>
									</h5>
									<p class="mb-1">{{ entry.content }}</p>
									<small>{{ entry.smallcontent}}</small>
								</div>
							</div>
						</a>
					{% endfor %}
				</div>
			</div>


		</div>
	</div>
{% endblock %}

{% set nbrL=item.backpackLinks | length %}
{% set nbrF=item.backpackFiles | length %}
{% if nbrL>0 or nbrF>0 %}
	{% import "macros/file.html.twig" as file %}
	{% import "macros/link.html.twig" as link %}
	<div class=" list-blk">
		<table class="table table-hover bg-white">
			<colgroup>
				<col class="col-lg-1">
				<col class="col-lg-8">
				<col class="col-lg-2">
				<col class="col-lg-1">
			</colgroup>

			<tbody>
				{{ file.showFiles(item.backpackFiles,item,'backpack_file_show_secure') }}
				{{ link.showLinks(item.backpackLinks) }}
			</tbody>
		</table>
	</div>
{% endif %}

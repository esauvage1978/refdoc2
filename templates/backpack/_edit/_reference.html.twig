{% embed 'widgets/card-widget.html.twig' %}
	{% block card_class %}flat bg-p-light border-p-dark
	{% endblock %}
	{% block card_body %}
		<div class="form-group row">

		</div>

		<div class="form-group row m-2 js-createTip-wrapper">
<label for="" class="col-sm-2 col-form-label">Référence</label>
<div class="col-sm-3">
	{{ form_widget(form.ref) }}
</div>
<div class="col-sm-7">

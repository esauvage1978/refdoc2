{% extends 'backpack/layout.html.twig' %}
{% import "macros/history.html.twig" as history %}

{% block page_subtitle %}Historique des modifications
{% endblock %}

{% block breadcrumb %}
	{% import "backpack/_btn_actions.html.twig" as actions %}
	{{ actions.backpack(
        'history',
        item.stateCurrent,
        item.owner==app.user,
        item,
        null
    ) }}
{% endblock %}


{% block page_content %}
	<div class="row justify-content-center ">
		<div class="col-10">
			<div class="bg-white rounded border-light p-4">
				{{ include(domaine ~ '/_show/_identification.html.twig') }}
				{{ include(domaine ~ '/_show/_content.html.twig') }}
			</div>


			{{ history.twig( item.histories ) }}
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ history.script() }}
{% endblock %}

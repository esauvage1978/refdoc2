{% extends 'base.html.twig' %}
{% block title %}
	{{ app_name }}
	- Page d'accueil
{% endblock %}
{% block page_title %}
	<i class="fas fa-home"></i>
	Page d'accueil
{% endblock %}

{% block page_content %}
	{% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
		{% import "macros/default.html.twig" as dft %}
		{{ dft.no_connexion() }}
	{% else %}
		{% import "macros/user.html.twig" as user %}
		{{user.messageEmailValidated(app.user)}}


		<div class="row justify-content-center mt-5">
			<div class="col-sm-12 col-xl-4 pl-5 pr-5">
				{{ render(controller('App\\Controller\\SubscriptionController::myListForHomeAction')) }}
				{{user.messageIsSubscription(app.user)}}
			</div>
			<div class="col-sm-12 col-xl-8"></div>
		</div>

	{% endif %}

{% endblock %}

{% extends 'baseProfil.html.twig' %}


{% block title %} {{ parent() }} Récupérez votre mot de passe {% endblock %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            {{ app_name }}
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Récupérez votre mot de passe</p>
                <div class="card-body ">
                    {{ form_start(form) }}

                    <div class="input-group mb-3">
                        {{ form_widget(form.email) }}
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>


                    <p class="text-center">
                        <button name="f" id="recover" class="btn btn-info mb-4">
                            Récupération
                        </button>
                    </p>
                    {{ form_end(form) }}
                </div>


                <p class="mb-1 mt-5">
                    <a class="d-flex justify-content-center" href="{{ path('user_login') }}"
                       title="Create an account">
                        Déjà un compte ?
                    </a>
                </p>
            </div>


        </div>
    </div>
{% endblock %}